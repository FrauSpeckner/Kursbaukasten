    }

    /* Stile für das Bild */
    .ESG-image {
      max-width: 100%;
      max-height: 150px;
      border: 2px solid #ccc;
      margin-top: 10px;
    }

    /* Stile für die Emojis */
    .ESG-emoji-snow {
      position: absolute;
      animation: ESG-emojiFall 10s linear infinite;
      opacity: 0.8;
    }

    /* Animation für das Emoji-Schneetreiben */
    @keyframes ESG-emojiFall {
      0% {
        opacity: 0.8;
        transform: translateY(-50vh) translateX(0) rotate(0deg);
      }
      100% {
        opacity: 1;
        transform: translateY(100vh) translateX(calc(100vw * -0.15)) rotate(360deg);
      }
    }
  </style>
